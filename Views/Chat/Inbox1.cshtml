@model List<HairCareStore.Models.Conversation>

@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="inbox-wrap">
    <style>
        /* ===== Scoped CSS: inbox-* ===== */
        .inbox-wrap {
            --inbox-pink: #c47684;
            --inbox-pink-soft: rgba(196,118,132,.14);
            --inbox-pink-soft2: rgba(196,118,132,.08);
            max-width: 1100px;
            margin: 32px auto;
            padding: 150px 16px 0;
            font-family: "Open Sans", sans-serif;
        }

        /* ===== PAGE TITLE (CHỈ CHỮ – KHÔNG NỀN) ===== */
        .inbox-page-title {
            margin-bottom: 14px;
            font-size: 22px;
            font-weight: 900;
            color: var(--inbox-pink);
            margin-left: -130px; /* ✅ đẩy chữ sang trái */
        }


        .inbox-card {
            background: #fff;
            border: 1px solid rgba(31,41,55,.12);
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0,0,0,.06);
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        /* ===== TABLE HEADER: NỀN HỒNG NHẠT + CHỮ HỒNG ===== */
        thead {
            background: var(--inbox-pink-soft2);
        }

            thead th {
                color: var(--inbox-pink);
                font-weight: 900;
                border-bottom: 1px solid rgba(196,118,132,.22);
            }

        th, td {
            padding: 14px 12px;
            text-align: left;
            border-bottom: 1px solid rgba(31,41,55,.08);
            font-size: 14px;
            vertical-align: top;
        }

        tbody tr {
            cursor: pointer;
            transition: background .15s ease;
        }

            tbody tr:hover {
                background: rgba(196,118,132,.08);
            }

        .client-name {
            font-weight: 800;
            color: #6b7280;
            ;
        }

        .lastmsg {
            color: #6b7280;
            ;
            font-size: 14px;
            line-height: 1.35;
            max-width: 520px;
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
        }

        .time {
            font-size: 13px;
            color: #6b7280;
            white-space: nowrap;
        }

        .empty {
            padding: 24px;
            text-align: center;
            color: #6b7280;
        }
    </style>

    <!-- ✅ TITLE TÁCH RIÊNG – KHÔNG LIÊN QUAN BẢNG -->
    <div class="inbox-page-title">
        Customer Conversations
    </div>

    <div class="inbox-card">
        @if (Model == null || !Model.Any())
        {
            <div class="empty">Chưa có cuộc trò chuyện nào.</div>
        }
        else
        {
            <table>
                <thead>
                    <tr>
                        <th>Client</th>
                        <th>Last message</th>
                        <th>Last time</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr onclick="location.href='@Url.Action("Room", "Chat", new { conversationId = c.ConversationId })'">
                            <td>
                                <div class="client-name">
                                    @(c.Client?.Fullname ?? "Unknown")
                                </div>
                            </td>

                            <td>
                                <div class="lastmsg">
                                    @(string.IsNullOrWhiteSpace(c.LastMessage) ? "—" : c.LastMessage)
                                </div>
                            </td>

                            <td class="time">
                                @c.LastMessageAt.ToString("HH:mm dd/MM/yyyy")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</section>
