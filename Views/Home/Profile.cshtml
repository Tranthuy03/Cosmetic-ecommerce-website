@using HairCareStore.ViewModels
@{
    ViewData["Title"] = "Profile";
}
@section Styles {
    <link rel="stylesheet" href="~/css/profile.css" />
}
@model HairCareStore.Models.User


<section class="books-detail">
    <h3 class="section-title  fw-bold text-center">
        Profile Information
    </h3>
    <div class="container">
        <div class="row">
            <div class="col-5 image-profile">

                <img class="img-fluid" src="@Url.Content("~/img/Users/"+Model.Avatar)">
            </div>
            <div class="col-7 image-profile">
                <div class="book-info">
                    <p><span>Full Name: </span>@Model.Fullname</p>
                    <p><span>Description: </span>@Model.Description</p>
                    <p><span>Email: </span>@Model.Email</p>
                    <p><span>Phone: </span>@Model.Phone</p>
                    <p><span>Adress: </span>@Model.Address</p>
                    <a href="@Url.Action("EditProfile","Home", new { id = Model.UserId })" class="btn btn-primary">Edit Detail</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="oh-container">
                <div class="oh-header">
                    <div>
                        <h2 class="oh-title">Purchase History</h2>
                        <p class="oh-subtitle">View and track your previous orders.</p>
                    </div>
                </div>

                <div class="oh-card">
                    <table class="oh-table">
                        <thead class="oh-thead">
                            <tr>
                                <th>Order</th>
                                <th>Date</th>
                                <th>Total</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>

                        <tbody class="oh-tbody">
                            @{
                                var orders = ViewBag.OrderHistory as List<OrderHistoryViewModel>;
                            }

                            @if (orders != null && orders.Any())
                            {
                                foreach (var order in orders)
                                {
                                    <tr>
                                        <td data-label="Order">#@order.OrderId</td>

                                        <td data-label="Date">
                                            @order.Date?.ToString("dd MMM yyyy")
                                        </td>

                                        <td data-label="Total">
                                            @String.Format("{0:N0} $", order.TotalAmount)
                                        </td>

                                        <td data-label="Status">
                                            <span class="oh-badge @order.Status">
                                                <span class="oh-dot"></span>@order.Status
                                            </span>
                                        </td>

                                        <td data-label="Actions">
                                            <div class="oh-actions">
                                                <a class="oh-btn oh-btn--primary"
                                                   href="@Url.Action("OrderDetail", "Order", new { id = order.OrderId })">
                                                    View details
                                                </a>

                                                <a class="oh-btn"
                                                   href="@Url.Action("BuyAgain", "Order", new { id = order.OrderId })">
                                                    Buy again
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center">
                                        You haven't placed any orders yet.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
       
    </div>
</section>
